<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:background="?android:selectableItemBackground">

    <ImageView
        android:src="@drawable/ic_food_24dp"
        android:id="@+id/image"
        android:background="@color/grey"
        android:padding="@dimen/app_default_padding"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/img_desc_recipe"
        android:layout_width="@dimen/list_img_size"
        android:layout_height="@dimen/list_img_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/app_default_padding"
        android:layout_marginStart="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_title"
            android:layout_marginBottom="@dimen/app_default_padding"
            style="@style/AppTheme.ListItem" />

        <TextView
            android:id="@+id/servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_subtitle"
            style="@style/AppTheme.ListItemSmall" />

    </LinearLayout>
</RelativeLayout>