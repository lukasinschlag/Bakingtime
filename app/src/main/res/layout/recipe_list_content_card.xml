<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_default_padding"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/list_img_size"
            android:layout_height="@dimen/list_img_size"
            android:background="@color/grey"
            android:contentDescription="@string/img_desc_recipe"
            android:padding="@dimen/app_default_padding"
            android:src="@drawable/ic_food_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_margin"
            android:orientation="vertical"
            android:padding="@dimen/app_default_padding">

            <TextView
                android:id="@+id/name"
                style="@style/AppTheme.ListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_default_padding"
                android:text="@string/placeholder_title" />

            <TextView
                android:id="@+id/servings"
                style="@style/AppTheme.ListItemSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_subtitle" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>