<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_padding"
    android:background="?android:selectableItemBackground">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/video"
        android:layout_marginEnd="@dimen/app_default_padding"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:src="@drawable/ic_video"
        android:id="@+id/video"
        android:visibility="invisible"
        android:contentDescription="@string/vid_desc_recipe"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/item_video"
        android:layout_height="@dimen/item_video" />
</RelativeLayout>